# fix floating terminal - enable floating mode by default + move it
for_window [instance="altyo"] floating enable , exec i3-msg move down 38px

# fix launcher position
# 1600/2-600/2  900/2 - 50
for_window [class="albert"] sticky enable , move position 500px 250px

# enable floating window for pidgin by default
for_window [class="Pidgin"] floating enable

# browser pop-ups
for_window [window_role="pop-up"] floating enable

#exec autokey-gtk
for_window [instance="keepass"] floating enable , move scratchpad

# firejail sandbox windows shouldn't use the floating mode
for_window [class="Xephyr"] floating disable

# calendar popup
for_window [class="XTerm" title="Calendar"] floating enable, resize set 216 173, move window to position 1376 25

# cpu profile popup
for_window [class="XTerm" title="CPU Profile"] floating enable, resize set 116 110, move window to position 1313 25

# audio output popup
for_window [class="XTerm" title="Audio Output"] floating enable, resize set 416 10, move window to position 1113 25

# enable floating mode for xterm menus
for_window [class="XTerm" title="XTerm Menu Script"] floating enable, resize set 1 1, move window to position 1600 900


